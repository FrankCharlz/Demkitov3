<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mj.demkito.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">

        </android.support.v7.widget.Toolbar>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/listening2"
            android:scaleType="matrix"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:layout_marginTop="16dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:maxLines="12"
                    android:background="@color/text_view_bg"
                    />
            </ScrollView>

            <Button
                style="@style/ButtonStyle"
                android:id="@+id/button1"
                android:background="@color/button_blue"
                android:text="REMOVE ADS"
                android:layout_below="@id/scrollView"
                 />


            <Button
                style="@style/ButtonStyle"
                android:id="@+id/button2"
                android:background="@color/button_red"
                android:text="DELETE ORIGINAL"
                android:layout_below="@id/button1"/>


            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/icon_separator"
                android:layout_below="@id/button2"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/github"
                android:background="@drawable/social_buttons_bg"
                android:layout_margin="8dp"
                android:layout_below="@id/button2"
                android:layout_toLeftOf="@id/icon_separator"
                android:id="@+id/github_icon"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter"
                android:background="@drawable/social_buttons_bg"
                android:layout_margin="8dp"
                android:layout_below="@id/button2"
                android:layout_toRightOf="@id/icon_separator"
                />


        </RelativeLayout>


    </FrameLayout>








</LinearLayout>

